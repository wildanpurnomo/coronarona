<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="dicoding:email" content="wildanfajarpurnomo@gmail.com">
    <title>Main</title>
    <!-- Custom fonts for this template-->
    <link href="/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="/assets/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/assets/css/sb-admin.css" rel="stylesheet">
</head>

<body id="page-top">
    <%- include('./partials/navbar.ejs') %>

    <div id="wrapper">

        <%- include('./partials/sidebar.ejs') %>

        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- DataTables Example -->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Data Donasi Coronarona</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <button type="button" class="btn btn-primary" style="margin-bottom : 10px"
                                data-toggle="modal" data-target="#form-add">Tambah Data Donasi</button>
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Issuer ID</th>
                                        <th>Donation Name</th>
                                        <th>Description</th>
                                        <th>Contact Person</th>
                                        <th>Url</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Issuer ID</th>
                                        <th>Donation Name</th>
                                        <th>Description</th>
                                        <th>Contact Person</th>
                                        <th>Url</th>
                                        <th>Status</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for (var i = 0 ; i < donasiList.length ; i++) { %>
                                    <tr>
                                        <td><%= donasiList[i].issuerID %> </td>
                                        <td><%= donasiList[i].name %> </td>
                                        <td><%= donasiList[i].description %> </td>
                                        <td><%= donasiList[i].contactPerson %> </td>
                                        <td><%= donasiList[i].Url %> </td>
                                        <td><%- donasiList[i].adminApproval ? `<button type="button" class="btn btn-outline-danger" id="${donasiList[i]._id}">Decline</button>` : `<button type="button" class="btn btn-outline-success" id="${donasiList[i]._id}">Approve</button>` %> </td>
                                    </tr>
                                    <%} %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->

            <%- include('./partials/modal.ejs') %>
            <%- include('./partials/footer.ejs') %>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <%- include('./partials/js.ejs') %>

</body>

</html>